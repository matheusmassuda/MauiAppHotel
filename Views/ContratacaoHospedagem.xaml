<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="white">

    <!-- Todo o conteúdo da página -->
    <VerticalStackLayout VerticalOptions="CenterAndExpand" 
                         Padding="20"
                         Spacing="20">

        <!-- Cabeçalho -->
        <Label Text="VALOR DA DIÁRIA"
               FontFamily="Karla"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="#2C3E50"
               HorizontalOptions="Center"/>

        <!-- Card Principal -->
        <Frame Padding="20"
               CornerRadius="0"
               BackgroundColor="#FFFFFF"
               HasShadow="True"
               BorderColor="#d7d7d7">

            <VerticalStackLayout Spacing="20">

                <!-- Adultos e Crianças -->
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*"
                      ColumnSpacing="10"
                      BackgroundColor="#FFFFFF">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="#2C3E50"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             BackgroundColor="#cccccc" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="#2C3E50"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             BackgroundColor="#cccccc" />
                </Grid>

                <!-- Escolha da suíte -->
                <Frame BackgroundColor="#FFFFFF"
                       Padding="10"
                       CornerRadius="10"
                       HasShadow="True"
                       BorderColor="Transparent">

                    <VerticalStackLayout>
                        <Label Text="Escolha a Suíte" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>

                        <Picker x:Name="pck_quarto"
                                Title="Acomodações:"
                                TextColor="#2C3E50"
                                TitleColor="#888"
                                BackgroundColor="#d7d7d7"
                                ItemDisplayBinding="{Binding Descricao}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Duração da estadia -->
                <Frame Padding="15" 
                       CornerRadius="15"
                       BackgroundColor="#FFFFFF"
                       BorderColor="Transparent">
                    <Frame.Shadow>
                        <Shadow 
                            Brush="Black"
                            Offset="5,5"
                            Radius="10"
                            Opacity="0.3"/>
                    </Frame.Shadow>

                    <VerticalStackLayout Spacing="15">
                        <Label Text="Duração da Estadia" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Check-in:" WidthRequest="80" TextColor="#2C3E50"/>
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy"
                                        BackgroundColor="#F8F8F8"
                                        TextColor="#2C3E50"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Check-out:" WidthRequest="80" TextColor="#2C3E50"/>
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy"
                                        BackgroundColor="#F8F8F8"
                                        TextColor="#2C3E50"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botão -->
                <Frame CornerRadius="12"
                       Padding="0"
                       HasShadow="True"
                       BackgroundColor="#FFFFFF"
                       BorderColor="Transparent"
                       HeightRequest="50">
                    <Button Text="Avançar"
                            Clicked="Button_Clicked"
                            BackgroundColor="#212121"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="10"/>
                </Frame>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
